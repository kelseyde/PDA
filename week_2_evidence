#Submitted as evidence for Professional Development Award, Software Development

immanuel_kant = {
  name: "Immanuel Kant",
  role: "Philosopher",
  age: 293,
  school: "Idealism",
  notable_works: "Critique of Pure Reason"
}


immanuel_kant.each do |key, value|
  if key == :role && value == "Philosopher"
    value = ("The greatest " + value.downcase + " of all time.")
    puts value
  end
end
#Will update and return Kant's role.
